{
  "name": "multilingual-pa",
  "version": "1.0.0",
  "description": "Free Multilingual AI Personal Assistant for ProteaHRMS - Optimized",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build": "electron-builder --win --x64",
    "build-all": "electron-builder --win --mac --linux",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.proteahrms.multilingual-pa",
    "productName": "Multilingual PA",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "preload.js",
      "server.js",
      "database-adapter.js",
      "public/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "@google/generative-ai": "^0.2.1",
    "@supabase/supabase-js": "^2.38.5",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2",
    "express-rate-limit": "^7.1.5",
    "validator": "^13.11.0",
    "xss": "^1.0.14",
    "electron-store": "^8.1.0",
    "electron-log": "^5.0.0",
    "sqlite3": "^5.1.6",
    "mssql": "^10.0.2",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1"
  },
  "engines": {
    "node": "22.x"
  }
}
